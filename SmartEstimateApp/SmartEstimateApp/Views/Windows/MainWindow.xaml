<Window
    x:Class="SmartEstimateApp.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SmartEstimateApp"
    mc:Ignorable="d"
    Title="SmartEstimateApp" Height="600" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Меню и информация о пользователе -->
        <Grid Grid.Row="0" Background="#2C3E50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Smart Estimate App" Foreground="White" FontSize="18" 
                       FontWeight="Bold" Margin="15,10" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10">
                <TextBlock x:Name="UserNameTextBlock" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            </StackPanel>
        </Grid>

        <!-- Основной контент -->
        <Frame x:Name="MainFrameU" Grid.Row="1" NavigationUIVisibility="Hidden"/>

        <!-- Строка состояния -->
        <StatusBar Grid.Row="2" Background="#ECF0F1">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Готово"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>