<Page x:Class="SmartEstimateApp.Views.Pages.ProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="ProjectsPage">

    <Border CornerRadius="20,0,0,0" Background="{StaticResource AppleBackgroundBrush}">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Section: Header and Search -->
            <Grid Grid.Row="0" Margin="48,32,48,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Header -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Проекты"
                               FontFamily="{StaticResource AppleFont}"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Управление вашими проектами"
                               Foreground="{StaticResource AppleTextSecondaryBrush}"
                               FontFamily="{StaticResource AppleFont}"
                               FontSize="16"
                               Margin="0,0,0,24"/>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button Content="Новый проект"
                            Style="{StaticResource AppleButtonStyle}"
                            Width="160"
                            Height="48"
                            FontSize="14"
                            Command="{Binding AddProjectCommand}"
                            Margin="0,0,16,0"/>
                </StackPanel>
            </Grid>

            <!-- Search Bar and View Toggle -->
            <Grid Grid.Row="0" Margin="48,140,48,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Bar -->
                <Border Grid.Column="0"
                        Height="56"
                        Background="{StaticResource AppleCardBackgroundBrush}"
                        CornerRadius="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Magnify"
                                                 Width="24" Height="24"
                                                 Margin="20,0,12,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource AppleTextSecondaryBrush}"/>

                        <TextBox Grid.Column="1"
                                 Style="{StaticResource ClientSeacrhBox}"
                                 materialDesign:HintAssist.Hint="Поиск по названию, клиенту или описанию..."
                                 materialDesign:HintAssist.HintOpacity="0.5"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 CaretBrush="{StaticResource AppleTextPrimaryBrush}"
                                 SelectionBrush="#8086868B"
                                 VerticalAlignment="Center"
                                 FontSize="14"
                                 Foreground="{StaticResource AppleTextPrimaryBrush}"
                                 Height="40" Margin="0,0,8,0"/>

                        <Button Grid.Column="2" 
                                Style="{StaticResource AppleSearchClearButton}"
                                Margin="8,0,16,0"
                                Width="32" Height="32"
                                Padding="4"
                                BorderThickness="0"
                                Command="{Binding ClearSearchCommand}"
                                Visibility="{Binding SearchText, Converter={StaticResource StringNullOrEmptyToInverseVisibilityConverter}}">
                            <materialDesign:PackIcon Kind="Close" 
                                                     Width="18" Height="18" 
                                                     Foreground="{StaticResource AppleTextSecondaryBrush}"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- View Toggle Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                    <Border Background="{StaticResource AppleCardBackgroundBrush}" 
                            CornerRadius="16" 
                            Height="56" 
                            Padding="8,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Toggle Button for Cards View -->
                            <ToggleButton x:Name="CardViewToggle"
                                          Style="{StaticResource ViewModeToggleButtonStyle}"
                                          IsChecked="{Binding IsCardViewSelected, Mode=TwoWay}"
                                          ToolTip="Вид плиткой"
                                          Command="{Binding SetViewModeCommand}"
                                          CommandParameter="Card">
                                <materialDesign:PackIcon Kind="ViewGrid" Width="20" Height="20"/>
                            </ToggleButton>

                            <!-- Toggle Button for Table View -->
                            <ToggleButton x:Name="TableViewToggle"
                                          Style="{StaticResource ViewModeToggleButtonStyle}"
                                          IsChecked="{Binding IsTableViewSelected, Mode=TwoWay}"
                                          ToolTip="Вид таблицей"
                                          Command="{Binding SetViewModeCommand}"
                                          CommandParameter="Table">
                                <materialDesign:PackIcon Kind="Table" Width="20" Height="20"/>
                            </ToggleButton>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Main Content: Project Cards or Table -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Status Info -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="48,0,48,16" 
                                Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="{Binding ResultsInfo}"
                                   Foreground="{StaticResource AppleTextSecondaryBrush}"
                                   FontFamily="{StaticResource AppleFont}"
                                   FontSize="14"/>
                    </StackPanel>

                    <!-- No Results Message -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource AppleCardBackgroundBrush}"
                            CornerRadius="16"
                            Margin="48,0,48,0"
                            Height="180"
                            Visibility="{Binding HasResults, Converter={StaticResource BooleanToInverseVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="FileDocumentOutline"
                                                     Width="48" Height="48"
                                                     HorizontalAlignment="Center"
                                                     Foreground="{StaticResource AppleTextSecondaryBrush}"
                                                     Opacity="0.7"
                                                     Margin="0,0,0,16"/>
                            <TextBlock Text="Проекты не найдены"
                                       FontFamily="{StaticResource AppleFont}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Измените параметры поиска или добавьте новый проект"
                                       FontFamily="{StaticResource AppleFont}"
                                       FontSize="14"
                                       Foreground="{StaticResource AppleTextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Projects Cards View -->
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Items}"
                                  Margin="36,0,36,0">
                        <ItemsControl.Visibility>
                            <MultiBinding Converter="{StaticResource CardViewVisibilityConverter}">
                                <Binding Path="IsCardViewSelected"/>
                                <Binding Path="HasResults"/>
                            </MultiBinding>
                        </ItemsControl.Visibility>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource DashboardCardAnimated}"
                                        Width="340" Height="220"
                                        Margin="16"
                                        Background="{StaticResource AppleCardBackgroundBrush}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Дата в правом верхнем углу -->
                                        <Border Background="{StaticResource ApplePrimaryBrush}"
                                                CornerRadius="8"
                                                Padding="10,4"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,10,10,0"
                                                Opacity="0.92">
                                            <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd MMMM yyyy}}"
                                                       FontFamily="{StaticResource AppleFont}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       TextAlignment="Center"/>
                                        </Border>

                                        <!-- Основная информация о проекте -->
                                        <StackPanel Grid.Row="0" Margin="24,24,24,0">
                                            <TextBlock Text="{Binding Name}"
                                                       FontFamily="{StaticResource AppleFont}"
                                                       FontSize="20"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Description}"
                                                       FontFamily="{StaticResource AppleFont}"
                                                       FontSize="13"
                                                       Foreground="{StaticResource AppleTextSecondaryBrush}"
                                                       Margin="0,0,0,6"
                                                       TextWrapping="Wrap"
                                                       MaxHeight="40"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding ClientName, StringFormat=Клиент: {0}}"
                                                       FontFamily="{StaticResource AppleFont}"
                                                       FontSize="12"
                                                       Foreground="{StaticResource AppleTextSecondaryBrush}"/>
                                        </StackPanel>

                                        <!-- Кнопки действий -->
                                        <StackPanel Grid.Row="1"
                                                    Orientation="Horizontal"
                                                    Margin="24,0,24,24"
                                                    HorizontalAlignment="Right">
                                            <Button Content="Подробнее"
                                                    Style="{StaticResource AppleCardPrimaryButton}"
                                                    Command="{Binding DataContext.ShowProjectDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}" Margin="0,0,8,0"/>
                                            <Button Content="Удалить"
                                                    Style="{StaticResource AppleCardDestructiveButton}"
                                                    Command="{Binding DataContext.DeleteProjectCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>

            <!-- Projects Table View -->
            <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Items}" 
                              Style="{StaticResource AppleDataGrid}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              IsReadOnly="True"
                              Margin="48,0,48,16">
                <DataGrid.Visibility>
                    <MultiBinding Converter="{StaticResource TableViewVisibilityConverter}">
                        <Binding Path="IsTableViewSelected"/>
                        <Binding Path="HasResults"/>
                    </MultiBinding>
                </DataGrid.Visibility>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}" Width="*"/>
                    <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}" Width="Auto"/>
                    <DataGridTemplateColumn Header="Действия" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Подробнее"
                                                    Style="{StaticResource AppleCardPrimaryButton}"
                                                    Height="32"
                                                    Command="{Binding DataContext.ShowProjectDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    Margin="0,0,8,0"/>
                                    <Button Content="Удалить"
                                                    Style="{StaticResource AppleCardDestructiveButton}"
                                                    Height="32"
                                                    Command="{Binding DataContext.DeleteProjectCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!-- Pagination Controls -->
            <Border Grid.Row="2" 
                    Background="{StaticResource AppleCardBackgroundBrush}"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#E5E5E5"
                    Padding="48,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Items Per Page -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Показать:"
                                   FontFamily="{StaticResource AppleFont}"
                                   FontSize="14"
                                   Foreground="{StaticResource AppleTextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <ComboBox Width="80"
                                  Height="36"
                                  FontFamily="{StaticResource AppleFont}"
                                  FontSize="14"
                                  SelectedItem="{Binding PageSize}"
                                  ItemsSource="{Binding PageSizeOptions}"
                                  Foreground="{StaticResource AppleTextPrimaryBrush}"
                                  BorderBrush="{StaticResource AppleBorderBrush}"/>
                    </StackPanel>

                    <!-- Page Navigation -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource NavPageButton}"
                                Command="{Binding GoToFirstPageCommand}">
                            <materialDesign:PackIcon Kind="PageFirst" Width="20" Height="20"/>
                        </Button>
                        <Button Style="{StaticResource NavPageButton}"
                                Command="{Binding PreviousPageCommand}">
                            <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                        </Button>

                        <ItemsControl ItemsSource="{Binding PageNumbers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" 
                                            Style="{StaticResource PageNumberButton}"
                                            Command="{Binding DataContext.GoToPageCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Style="{StaticResource NavPageButton}"
                                Command="{Binding NextPageCommand}">
                            <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                        </Button>
                        <Button Style="{StaticResource NavPageButton}"
                                Command="{Binding GoToLastPageCommand}">
                            <materialDesign:PackIcon Kind="PageLast" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>

                    <!-- Page Info -->
                    <TextBlock Grid.Column="2"
                               Text="{Binding PageInfo}"
                               FontFamily="{StaticResource AppleFont}"
                               FontSize="14"
                               Foreground="{StaticResource AppleTextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>