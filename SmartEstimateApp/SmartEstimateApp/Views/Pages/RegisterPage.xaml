<Page
    x:Class="SmartEstimateApp.Views.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    Title="Регистрация" Background="White">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320" Margin="20">
                <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Email:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Пароль:" Margin="0,5,0,0"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10" Padding="5" PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="Подтверждение пароля:" Margin="0,5,0,0"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,5,0,20" Padding="5" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <Button Content="Зарегистрироваться" Margin="0,10,0,20" Padding="5" 
                        Command="{Binding RegisterCommand}"/>

                <TextBlock HorizontalAlignment="Center">
                    <Hyperlink Command="{Binding NavigateToLoginCommand}">
                        Уже есть аккаунт? Войти
                    </Hyperlink>
                </TextBlock>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0" 
                           Visibility="{Binding ErrorVisibility}" HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>