<Page x:Class="SmartEstimateApp.Views.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Регистрация"
      Background="#F1F4F8">

    <Grid>
        <Border Style="{StaticResource CardStyle}">
            <StackPanel VerticalAlignment="Center" Width="600">
                <TextBlock Text="Регистрация" Style="{StaticResource TitleStyle}"/>

                <StackPanel Margin="0,30,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Email" Style="{StaticResource IconStyle}"/>
                        <TextBlock Text="Электронная почта" Style="{StaticResource LabelStyle}"/>
                    </StackPanel>
                    <TextBox Style="{StaticResource InputFieldStyle}" 
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Lock" Style="{StaticResource IconStyle}"/>
                        <TextBlock Text="Пароль" Style="{StaticResource LabelStyle}"/>
                    </StackPanel>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordFieldStyle}"
                                PasswordChanged="PasswordBox_PasswordChanged"/>
                </StackPanel>

                <StackPanel Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="LockCheck" Style="{StaticResource IconStyle}"/>
                        <TextBlock Text="Подтверждение пароля" Style="{StaticResource LabelStyle}"/>
                    </StackPanel>
                    <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource PasswordFieldStyle}"
                                PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                </StackPanel>

                <Button Content="Зарегистрироваться" Style="{StaticResource LoginButtonStyle}" 
                        Command="{Binding RegisterCommand}"
                        Margin="0,30,0,0"/>

                <TextBlock Style="{StaticResource RegisterLinkStyle}" Margin="0,20,0,0">
                    <Run Text="Уже есть аккаунт? "/>
                    <Hyperlink Command="{Binding NavigateToLoginCommand}">
                        Войти
                    </Hyperlink>
                </TextBlock>

                <TextBlock Text="{Binding ErrorMessage}" 
                          TextWrapping="Wrap" Margin="0,20,0,0" HorizontalAlignment="Center"
                          Visibility="{Binding ErrorVisibility}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>