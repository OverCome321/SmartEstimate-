<Page x:Class="SmartEstimateApp.Views.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Регистрация"
      Background="{StaticResource AppleBackgroundBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="420">
            <!-- Register Form -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Регистрация" Style="{StaticResource TitleStyle}" Margin="0,0,0,20"/>

                    <!-- Email Field -->
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="Электронная почта" Style="{StaticResource LabelStyle}" Margin="2,0,0,6"/>
                        <TextBox Style="{StaticResource InputFieldStyle}" 
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Адрес электронной почты"
                                 materialDesign:HintAssist.HintOpacity="0.5" KeyDown="InputField_KeyDown">
                            <TextBox.Effect>
                                <DropShadowEffect x:Name="TextBoxShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                            </TextBox.Effect>
                            <TextBox.Triggers>
                                <EventTrigger RoutedEvent="GotFocus">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="TextBoxShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.3" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="TextBoxShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="12" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="LostFocus">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="TextBoxShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="TextBoxShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="8" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBox.Triggers>
                        </TextBox>
                    </StackPanel>

                    <!-- Password Field -->
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="Пароль" Style="{StaticResource LabelStyle}" Margin="2,0,0,6"/>
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordFieldStyle}"
                                     PasswordChanged="PasswordBox_PasswordChanged" materialDesign:HintAssist.Hint="Пароль"
                                     materialDesign:HintAssist.HintOpacity="0.5" KeyDown="InputField_KeyDown">
                            <PasswordBox.Effect>
                                <DropShadowEffect x:Name="PasswordBoxShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                            </PasswordBox.Effect>
                            <PasswordBox.Triggers>
                                <EventTrigger RoutedEvent="GotFocus">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PasswordBoxShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.3" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="PasswordBoxShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="12" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="LostFocus">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PasswordBoxShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="PasswordBoxShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="8" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </PasswordBox.Triggers>
                        </PasswordBox>
                    </StackPanel>

                    <!-- Confirm Password Field -->
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="Подтверждение пароля" Style="{StaticResource LabelStyle}" Margin="2,0,0,6"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource PasswordFieldStyle}"
                                     PasswordChanged="ConfirmPasswordBox_PasswordChanged" materialDesign:HintAssist.Hint="Пароль"
                                     materialDesign:HintAssist.HintOpacity="0.5" KeyDown="InputField_KeyDown">
                            <PasswordBox.Effect>
                                <DropShadowEffect x:Name="ConfirmPasswordBoxShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                            </PasswordBox.Effect>
                            <PasswordBox.Triggers>
                                <EventTrigger RoutedEvent="GotFocus">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ConfirmPasswordBoxShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.3" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ConfirmPasswordBoxShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="12" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="LostFocus">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ConfirmPasswordBoxShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ConfirmPasswordBoxShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="8" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </PasswordBox.Triggers>
                        </PasswordBox>
                    </StackPanel>

                    <!-- Remember Me -->
                    <StackPanel Margin="0,12,0,0">
                        <CheckBox Content="Запомнить меня" Style="{StaticResource CheckBoxStyle}" 
                                  IsChecked="{Binding RememberMe}"/>
                    </StackPanel>

                    <!-- Register Button -->
                    <Button Content="Зарегистрироваться" Style="{StaticResource LoginButtonStyle}" 
                            Command="{Binding RegisterCommand}"
                            Margin="0,24,0,0"
                            HorizontalAlignment="Center">
                        <Button.Effect>
                            <DropShadowEffect x:Name="ButtonShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                        </Button.Effect>
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.4" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="12" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="8" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>

                    <!-- Login Link -->
                    <TextBlock Style="{StaticResource RegisterLinkStyle}" Margin="0,20,0,0">
                        <Run Text="Уже есть аккаунт?"/>
                        <Hyperlink Command="{Binding NavigateToLoginCommand}">
                            Войти
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Footer Text -->
            <TextBlock Text="© 2025 Умный счетчик смет"
                       FontFamily="{StaticResource AppleFont}"
                       FontSize="11"
                       Foreground="{StaticResource AppleTextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>