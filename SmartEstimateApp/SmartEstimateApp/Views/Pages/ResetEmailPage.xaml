<Page x:Class="SmartEstimateApp.Views.Pages.ResetEmailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Сброс пароля"
      Background="{StaticResource AppleBackgroundBrush}">

    <Grid>
        <!-- Back Button (Moved to Top-Left) -->
        <Button Style="{StaticResource MinimalBackButtonStyle}"
                Command="{Binding GoBackCommand}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,0,0,0">
            <materialDesign:PackIcon Kind="ChevronLeft" 
                                     Width="24"      
                                     Height="24" 
                                     Foreground="{StaticResource AppleTextPrimaryBrush}"/>
        </Button>

        <!-- Reset Password Form -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="360">
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Сброс пароля" 
                               Style="{StaticResource TitleStyle}" 
                               Margin="0,0,0,20"/>

                    <!-- Email Entry -->
                    <StackPanel x:Name="EmailEntryPanel">
                        <!-- Email Field with Hint -->
                        <StackPanel Margin="0,5,0,0">
                            <TextBlock Text="Введите адрес электронной почты для сброса пароля" 
                                       Style="{StaticResource LabelStyle}" 
                                       Margin="0,0,0,8" 
                                       HorizontalAlignment="Center"/>
                            <TextBox Style="{StaticResource InputFieldStyle}" 
                                     materialDesign:HintAssist.Hint="Адрес электронной почты"
                                     materialDesign:HintAssist.HintOpacity="0.5"
                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="280" KeyDown="InputField_KeyDown">
                                <TextBox.Effect>
                                    <DropShadowEffect x:Name="EmailShadow" 
                                                     Color="Black" 
                                                     Direction="315" 
                                                     ShadowDepth="1" 
                                                     Opacity="0" 
                                                     BlurRadius="6"/>
                                </TextBox.Effect>
                                <TextBox.Triggers>
                                    <EventTrigger RoutedEvent="GotFocus">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="EmailShadow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0.2" Duration="0:0:0.15">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetName="EmailShadow"
                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                 To="10" Duration="0:0:0.15">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="LostFocus">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="EmailShadow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0" Duration="0:0:0.15">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseIn"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetName="EmailShadow"
                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                 To="6" Duration="0:0:0.15">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseIn"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </TextBox.Triggers>
                            </TextBox>
                        </StackPanel>

                        <!-- Send Code Button -->
                        <Button Content="Отправить код" 
                                Style="{StaticResource LoginButtonStyle}" 
                                Command="{Binding SendVerificationCodeCommand}"
                                Margin="0,20,0,0"
                                Width="280"
                                HorizontalAlignment="Center">
                            <Button.Effect>
                                <DropShadowEffect x:Name="SendCodeShadow" 
                                                 Color="Black" 
                                                 Direction="315" 
                                                 ShadowDepth="1" 
                                                 Opacity="0" 
                                                 BlurRadius="6"/>
                            </Button.Effect>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SendCodeShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.3" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SendCodeShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="10" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SendCodeShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SendCodeShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="6" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>