<Page x:Class="SmartEstimateApp.Views.Pages.VerificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="VerificationPage"
      Background="{StaticResource AppleBackgroundBrush}">

    <Grid>
        <Grid.Background>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Border Background="{StaticResource AppleCardBackgroundBrush}" Opacity="0.8">
                        <Border.Effect>
                            <BlurEffect Radius="20" KernelType="Gaussian"/>
                        </Border.Effect>
                    </Border>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>

        <Border Style="{StaticResource CardStyle}"
                Width="420"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel Margin="20">
                <!-- Header -->
                <TextBlock Text="Подтверждение" 
                           Style="{StaticResource TitleStyle}" 
                           Margin="0,0,0,20"
                           FontSize="28"
                           FontWeight="Bold"
                           TextAlignment="Center"/>

                <!-- Subtitle -->
                <TextBlock Text="Введите код, отправленный на вашу почту" 
                           Style="{StaticResource LabelStyle}" 
                           Margin="0,0,0,20"
                           FontSize="14"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>

                <!-- Verification Code Input -->
                <TextBox Style="{StaticResource InputFieldStyle}" 
                         Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,20"
                         Width="300"
                         HorizontalAlignment="Center" materialDesign:HintAssist.Hint="Код подтверждения"
                                 materialDesign:HintAssist.HintOpacity="0.5" KeyDown="InputField_KeyDown">
                    <TextBox.Effect>
                        <DropShadowEffect x:Name="TextBoxShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                    </TextBox.Effect>
                    <TextBox.Triggers>
                        <EventTrigger RoutedEvent="GotFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="TextBoxShadow"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.3" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="TextBoxShadow"
                                                     Storyboard.TargetProperty="BlurRadius"
                                                     To="12" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="LostFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="TextBoxShadow"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseIn"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="TextBoxShadow"
                                                     Storyboard.TargetProperty="BlurRadius"
                                                     To="8" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseIn"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBox.Triggers>
                </TextBox>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Подтвердить" 
                            Style="{StaticResource LoginButtonStyle}" 
                            Command="{Binding VerifyCodeCommand}"
                            Width="140"
                            Margin="0,0,10,0">
                        <Button.Effect>
                            <DropShadowEffect x:Name="ConfirmButtonShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                        </Button.Effect>
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ConfirmButtonShadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.4" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ConfirmButtonShadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="12" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ConfirmButtonShadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ConfirmButtonShadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="8" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>

                    <Button Content="Отмена" 
                            Style="{StaticResource LoginButtonStyle}" 
                            Command="{Binding CancelVerificationCommand}"
                            Width="140"
                            Background="{StaticResource AppleTextSecondaryBrush}"
                            Foreground="{StaticResource AppleCardBackgroundBrush}">
                        <Button.Effect>
                            <DropShadowEffect x:Name="CancelButtonShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                        </Button.Effect>
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CancelButtonShadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.4" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="CancelButtonShadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="12" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CancelButtonShadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="CancelButtonShadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="8" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>

                <!-- Resend Code Section -->
                <TextBlock Text="{Binding CountdownText}" 
                           Style="{StaticResource LabelStyle}" 
                           Foreground="Red"
                           Margin="0,20,0,10"
                           FontSize="13"
                           TextAlignment="Center"
                           Visibility="{Binding IsResendCooldownActive, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=collapsed}"/>

                <Button Content="Отправить повторно" 
                        Style="{StaticResource LoginButtonStyle}" 
                        Command="{Binding ResendCodeCommand}"
                        Width="290"
                        Margin="0,15,0,0"
                        IsEnabled="{Binding IsResendEnabled}"
                        Background="{StaticResource AppleBackgroundBrush}"
                        Foreground="{StaticResource ApplePrimaryBrush}"
                        BorderBrush="{StaticResource AppleBorderBrush}"
                        BorderThickness="1">
                    <Button.Effect>
                        <DropShadowEffect x:Name="ResendButtonShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                    </Button.Effect>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="ResendButtonShadow"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.4" Duration="0:0:0.15">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="ResendButtonShadow"
                                                     Storyboard.TargetProperty="BlurRadius"
                                                     To="12" Duration="0:0:0.15">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="ResendButtonShadow"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0" Duration="0:0:0.15">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseIn"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="ResendButtonShadow"
                                                     Storyboard.TargetProperty="BlurRadius"
                                                     To="8" Duration="0:0:0.15">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseIn"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>