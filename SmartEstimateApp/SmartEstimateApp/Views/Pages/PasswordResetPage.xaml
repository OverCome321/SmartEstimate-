<Page x:Class="SmartEstimateApp.Views.Pages.PasswordResetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Сброс пароля"
      Background="{StaticResource AppleBackgroundBrush}">

    <Grid>
        <!-- Back Button (Moved to Top-Left) -->
        <Button Style="{StaticResource MinimalBackButtonStyle}"
                Command="{Binding GoBackCommand}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,0,0,0">
            <materialDesign:PackIcon Kind="ChevronLeft" 
                                     Width="24"      
                                     Height="24" 
                                     Foreground="{StaticResource AppleTextPrimaryBrush}"/>
        </Button>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="420">
            <!-- Reset Password Form -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Сброс пароля" Style="{StaticResource TitleStyle}" Margin="0,0,0,20"/>

                    <!-- Step 3: New Password Entry -->
                    <StackPanel x:Name="NewPasswordPanel">
                        <TextBlock Text="Создайте новый пароль" 
                                   Style="{StaticResource LabelStyle}" 
                                   TextWrapping="Wrap" 
                                   Margin="2,0,0,20"/>

                        <!-- New Password Field -->
                        <StackPanel Margin="0,5,0,0">
                            <TextBlock Text="Новый пароль" Style="{StaticResource LabelStyle}" Margin="2,0,0,6"/>
                            <PasswordBox x:Name="PwdNewPassword" Style="{StaticResource PasswordFieldStyle}" 
                                         PasswordChanged="PasswordBox_PasswordChanged" materialDesign:HintAssist.Hint="Пароль" materialDesign:HintAssist.HintOpacity="0.5" KeyDown="InputField_KeyDown">
                                <PasswordBox.Effect>
                                    <DropShadowEffect x:Name="NewPasswordShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                                </PasswordBox.Effect>
                                <PasswordBox.Triggers>
                                    <EventTrigger RoutedEvent="GotFocus">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="NewPasswordShadow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0.3" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetName="NewPasswordShadow"
                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                 To="12" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="LostFocus">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="NewPasswordShadow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseIn"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetName="NewPasswordShadow"
                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                 To="8" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseIn"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </PasswordBox.Triggers>
                            </PasswordBox>
                        </StackPanel>

                        <!-- Confirm Password Field -->
                        <StackPanel Margin="0,16,0,0">
                            <TextBlock Text="Подтвердите пароль" Style="{StaticResource LabelStyle}" Margin="2,0,0,6"/>
                            <PasswordBox x:Name="PwdConfirmPassword" Style="{StaticResource PasswordFieldStyle}" materialDesign:HintAssist.Hint="Пароль"
                                     materialDesign:HintAssist.HintOpacity="0.5" PasswordChanged="ConfirmPasswordBox_PasswordChanged" KeyDown="InputField_KeyDown">
                                <PasswordBox.Effect>
                                    <DropShadowEffect x:Name="ConfirmPasswordShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                                </PasswordBox.Effect>
                                <PasswordBox.Triggers>
                                    <EventTrigger RoutedEvent="GotFocus">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ConfirmPasswordShadow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0.3" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetName="ConfirmPasswordShadow"
                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                 To="12" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="LostFocus">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ConfirmPasswordShadow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseIn"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetName="ConfirmPasswordShadow"
                                                                 Storyboard.TargetProperty="BlurRadius"
                                                                 To="8" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseIn"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </PasswordBox.Triggers>
                            </PasswordBox>
                        </StackPanel>

                        <!-- Password Requirements -->
                        <TextBlock Text="Пароль должен содержать не менее 10 символов, включая цифры и буквы" 
                                 Style="{StaticResource LabelStyle}" 
                                 TextWrapping="Wrap" 
                                 Margin="2,12,0,0"/>

                        <!-- Reset Password Button -->
                        <Button Content="Изменить пароль" Style="{StaticResource LoginButtonStyle}" 
                                Command="{Binding ChangePasswordCommand}"
                                Margin="0,24,0,0"
                                HorizontalAlignment="Center" Cursor="Hand">
                            <Button.Effect>
                                <DropShadowEffect x:Name="ResetShadow" Color="Black" Direction="315" ShadowDepth="2" Opacity="0" BlurRadius="8"/>
                            </Button.Effect>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ResetShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.4" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ResetShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="12" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ResetShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ResetShadow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="8" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Page>