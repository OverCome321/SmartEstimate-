<Page x:Class="SmartEstimateApp.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход в систему">

    <Grid>
        <Border Background="White" CornerRadius="5" Margin="100,20" Padding="40">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Вход в систему" FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Email:" VerticalAlignment="Center" Margin="0,0,33,0" FontSize="16"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Column="1" Padding="10,8" FontSize="16"/>
                </Grid>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Пароль:" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="16"/>
                    <PasswordBox x:Name="PwdPassword" Grid.Column="1" Padding="10,8" FontSize="16"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                </Grid>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" 
                           HorizontalAlignment="Center" Margin="0,20,0,0" 
                           Visibility="{Binding ErrorVisibility}" FontSize="14"/>

                <Button Content="Войти" Width="200" Height="45" Margin="0,30,0,0"
                        HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold"
                        Background="#2ecc71" Foreground="White" Command="{Binding LoginCommand}"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,3,0,0"> 
                    <Hyperlink Command="{Binding NavigateToRegisterCommand}">
                        Нет аккаунта. Создать?
                    </Hyperlink>
                </TextBlock>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="Загрузка..." Visibility="{Binding LoadingVisibility}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>