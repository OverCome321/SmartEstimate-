<Page x:Class="SmartEstimateApp.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Вход в систему"
      Background="#F1F4F8">
    <Grid>
        <Border Style="{StaticResource CardStyle}">
            <StackPanel VerticalAlignment="Center" Width="600">
                <TextBlock Text="Вход в систему" Style="{StaticResource TitleStyle}"/>

                <StackPanel Margin="0,30,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Email" Style="{StaticResource IconStyle}"/>
                        <TextBlock Text="Электронная почта" Style="{StaticResource LabelStyle}"/>
                    </StackPanel>
                    <TextBox Style="{StaticResource InputFieldStyle}" 
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Lock" Style="{StaticResource IconStyle}"/>
                        <TextBlock Text="Пароль" Style="{StaticResource LabelStyle}"/>
                    </StackPanel>
                    <PasswordBox x:Name="PwdPassword" Style="{StaticResource PasswordFieldStyle}"
                                PasswordChanged="PasswordBox_PasswordChanged"/>
                </StackPanel>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Content="Запомнить меня" Style="{StaticResource CheckBoxStyle}"/>
                    <TextBlock Grid.Column="1" Text="Забыли пароль?" 
                              Style="{StaticResource ForgotPasswordStyle}"
                              Cursor="Hand"/>
                </Grid>

                <Button Content="Войти" Style="{StaticResource LoginButtonStyle}" 
                        Command="{Binding LoginCommand}"
                        Margin="0,30,0,0"/>

                <TextBlock Style="{StaticResource RegisterLinkStyle}" Margin="0,20,0,0">
                    <Run Text="Нет учетной записи? "/>
                    <Hyperlink Command="{Binding NavigateToRegisterCommand}">
                        Зарегистрироваться
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>