<Page x:Class="SmartEstimateApp.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Вход в систему"
      Background="{StaticResource AppleBackgroundBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="420">
            <!-- Login Form -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Вход в систему" Style="{StaticResource TitleStyle}" Margin="0,0,0,20"/>

                    <!-- Email Field -->
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="Электронная почта" Style="{StaticResource LabelStyle}" Margin="2,0,0,6"/>
                        <TextBox Style="{StaticResource InputFieldStyle}" 
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Password Field -->
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="Пароль" Style="{StaticResource LabelStyle}" Margin="2,0,0,6"/>
                        <PasswordBox x:Name="PwdPassword" Style="{StaticResource PasswordFieldStyle}"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>
                    </StackPanel>

                    <!-- Remember Me & Forgot Password -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="Запомнить меня" Style="{StaticResource CheckBoxStyle}" 
                                  IsChecked="{Binding RememberMe}"/>
                        <TextBlock Grid.Column="1" Text="Забыли пароль?" 
                                   Style="{StaticResource ForgotPasswordStyle}"
                                   Cursor="Hand"/>
                    </Grid>

                    <!-- Login Button -->
                    <Button Content="Войти" Style="{StaticResource LoginButtonStyle}" 
                            Command="{Binding LoginCommand}"
                            Margin="0,24,0,0"
                            HorizontalAlignment="Center"/>

                    <!-- Register Link -->
                    <TextBlock Style="{StaticResource RegisterLinkStyle}" Margin="0,20,0,0">
                        <Run Text="Нет учетной записи?"/>
                        <Hyperlink Command="{Binding NavigateToRegisterCommand}">
                            Зарегистрироваться
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Footer Text -->
            <TextBlock Text="© 2025 Умный счетчик смет"
                       FontFamily="{StaticResource AppleFont}"
                       FontSize="11"
                       Foreground="{StaticResource AppleTextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>