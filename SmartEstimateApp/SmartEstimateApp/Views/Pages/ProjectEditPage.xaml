<Page x:Class="SmartEstimateApp.Views.Pages.ProjectEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Редактировать проект">

    <Grid Background="{StaticResource AppleBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource AppleCardBackgroundBrush}" 
                BorderBrush="{StaticResource AppleBorderBrush}" BorderThickness="0,0,0,1"
                Padding="32,24" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Редактировать проект" FontFamily="{StaticResource AppleFont}" 
                               FontWeight="SemiBold" FontSize="28" 
                               Foreground="{StaticResource AppleTextPrimaryBrush}"/>
                    <TextBlock Text="Обновите сведения и параметры проекта" 
                               FontFamily="{StaticResource AppleFont}" FontSize="16"
                               Foreground="{StaticResource AppleTextSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Отмена" Style="{StaticResource AppleCardPrimaryButton}" 
                            Margin="0,0,16,0" Command="{Binding CancelCommand}"/>
                    <Button Content="Сохранить изменения" Width="160" Height="36" 
                            FontFamily="{StaticResource AppleFont}" FontSize="15" 
                            FontWeight="SemiBold" Foreground="White"
                            Background="{StaticResource ApplePrimaryBrush}" 
                            BorderBrush="{StaticResource ApplePrimaryBrush}" 
                            BorderThickness="0" Cursor="Hand"
                            Command="{Binding SaveCommand}" 
                            materialDesign:ButtonAssist.CornerRadius="12">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppleSecondaryBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#0262CA"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" Padding="32,0,32,32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка -->
                <StackPanel Grid.Column="0" Margin="24">
                    <!-- Информация о проекте -->
                    <Border Style="{StaticResource DashboardCardAnimated}" Background="{StaticResource AppleCardBackgroundBrush}" 
                            BorderBrush="{StaticResource AppleBorderBrush}" BorderThickness="1"
                            CornerRadius="16" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Информация о проекте" FontFamily="{StaticResource AppleFont}" 
                                       FontWeight="SemiBold" FontSize="18" 
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="Название проекта" FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ClientSeacrhBox}"
                                     materialDesign:HintAssist.Hint="Введите название проекта"
                                     Margin="0,0,0,16"/>

                            <TextBlock Text="Клиент" FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Clients}" 
                                      SelectedItem="{Binding SelectedClient}"
                                      DisplayMemberPath="Name"
                                      Height="44" Padding="12,8"
                                      BorderThickness="0"
                                      Background="{StaticResource AppleCardBackgroundBrush}"
                                      Foreground="{StaticResource AppleTextPrimaryBrush}"
                                      FontFamily="{StaticResource AppleFont}" FontSize="14"
                                      materialDesign:HintAssist.Hint="Выберите клиента">
                                <!-- шаблон оставлен без изменений -->
                            </ComboBox>

                            <TextBlock Text="Описание" FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,16,0,8"/>
                            <TextBox Text="{Binding ProjectDescription, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ClientSeacrhBox}"
                                     materialDesign:HintAssist.Hint="Введите описание проекта"
                                     TextWrapping="Wrap" AcceptsReturn="True"
                                     Height="100" VerticalContentAlignment="Top"
                                     Padding="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Временная шкала проекта -->
                    <Border Style="{StaticResource DashboardCardAnimated}" 
                            Background="{StaticResource AppleCardBackgroundBrush}" 
                            BorderBrush="{StaticResource AppleBorderBrush}" BorderThickness="1"
                            CornerRadius="16" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Временные рамки проекта" FontFamily="{StaticResource AppleFont}" 
                                       FontWeight="SemiBold" FontSize="18" 
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Дата начала" 
                                           FontFamily="{StaticResource AppleFont}" 
                                           FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource AppleTextPrimaryBrush}"
                                           Margin="0,0,0,8"/>

                                <DatePicker Grid.Column="0" Grid.Row="1" 
                                            SelectedDate="{Binding StartDate}" 
                                            Height="44" Padding="12,8"
                                            BorderThickness="0"
                                            Background="{StaticResource AppleCardBackgroundBrush}"
                                            Foreground="{StaticResource AppleTextPrimaryBrush}"
                                            FontFamily="{StaticResource AppleFont}" FontSize="14"
                                            materialDesign:HintAssist.Hint="Выберите дату начала"/>

                                <TextBlock Grid.Column="2" Grid.Row="0" Text="Дата окончания" 
                                           FontFamily="{StaticResource AppleFont}" 
                                           FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource AppleTextPrimaryBrush}"
                                           Margin="0,0,0,8"/>

                                <DatePicker Grid.Column="2" Grid.Row="1" 
                                            SelectedDate="{Binding EndDate}" 
                                            Height="44" Padding="12,8"
                                            BorderThickness="0"
                                            Background="{StaticResource AppleCardBackgroundBrush}"
                                            Foreground="{StaticResource AppleTextPrimaryBrush}"
                                            FontFamily="{StaticResource AppleFont}" FontSize="14"
                                            materialDesign:HintAssist.Hint="Выберите дату окончания"/>
                            </Grid>

                            <TextBlock Text="Крайний срок" FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,16,0,8"/>
                            <DatePicker SelectedDate="{Binding Deadline}" 
                                        Height="44" Padding="12,8"
                                        BorderThickness="0"
                                        Background="{StaticResource AppleCardBackgroundBrush}"
                                        Foreground="{StaticResource AppleTextPrimaryBrush}"
                                        FontFamily="{StaticResource AppleFont}" FontSize="14"
                                        materialDesign:HintAssist.Hint="Выберите крайний срок"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Правая колонка -->
                <StackPanel Grid.Column="2" Margin="24">
                    <!-- Бюджет -->
                    <Border Style="{StaticResource DashboardCardAnimated}" 
                            Background="{StaticResource AppleCardBackgroundBrush}" 
                            BorderBrush="{StaticResource AppleBorderBrush}" BorderThickness="1"
                            CornerRadius="16" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Информация о бюджете" FontFamily="{StaticResource AppleFont}" 
                                       FontWeight="SemiBold" FontSize="18" 
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="Сумма бюджета" FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="#F5F5F7" CornerRadius="12,0,0,12" 
                                        Width="44" Height="44">
                                    <TextBlock Text="₽" 
                                               FontFamily="{StaticResource AppleFont}"
                                               FontSize="18" FontWeight="Medium"
                                               Foreground="{StaticResource AppleTextPrimaryBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBox Grid.Column="1" Text="{Binding Budget, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="44" Padding="12,8"
                                         BorderThickness="0"
                                         Background="{StaticResource AppleCardBackgroundBrush}"
                                         Foreground="{StaticResource AppleTextPrimaryBrush}"
                                         FontFamily="{StaticResource AppleFont}" FontSize="14"
                                         materialDesign:HintAssist.Hint="Введите сумму бюджета"
                                         VerticalContentAlignment="Center"/>
                            </Grid>

                            <TextBlock Text="Валюта" FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,16,0,8"/>
                            <ComboBox ItemsSource="{Binding Currencies}" 
                                      SelectedItem="{Binding SelectedCurrency}"
                                      Height="44" Padding="12,8"
                                      BorderThickness="0"
                                      Background="{StaticResource AppleCardBackgroundBrush}"
                                      Foreground="{StaticResource AppleTextPrimaryBrush}"
                                      FontFamily="{StaticResource AppleFont}" FontSize="14"
                                      materialDesign:HintAssist.Hint="Выберите валюту"/>
                        </StackPanel>
                    </Border>

                    <!-- Статус проекта -->
                    <Border Style="{StaticResource DashboardCardAnimated}" 
                            Background="{StaticResource AppleCardBackgroundBrush}" 
                            BorderBrush="{StaticResource AppleBorderBrush}" BorderThickness="1"
                            CornerRadius="16" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Статус проекта" FontFamily="{StaticResource AppleFont}" 
                                       FontWeight="SemiBold" FontSize="18" 
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="Текущий статус" FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding StatusOptions}" 
                                      SelectedItem="{Binding SelectedStatus}"
                                      Height="44" Padding="12,8"
                                      BorderThickness="0"
                                      Background="{StaticResource AppleCardBackgroundBrush}"
                                      Foreground="{StaticResource AppleTextPrimaryBrush}"
                                      FontFamily="{StaticResource AppleFont}" FontSize="14"
                                      materialDesign:HintAssist.Hint="Выберите статус"/>

                            <TextBlock Text="Приоритет" FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,16,0,8"/>
                            <ComboBox ItemsSource="{Binding PriorityOptions}" 
                                      SelectedItem="{Binding SelectedPriority}"
                                      Height="44" Padding="12,8"
                                      BorderThickness="0"
                                      Background="{StaticResource AppleCardBackgroundBrush}"
                                      Foreground="{StaticResource AppleTextPrimaryBrush}"
                                      FontFamily="{StaticResource AppleFont}" FontSize="14"
                                      materialDesign:HintAssist.Hint="Выберите приоритет"/>

                            <TextBlock Text="Выполнено (%)" FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       Margin="0,16,0,8"/>
                            <Slider Value="{Binding CompletionPercentage}" 
                                    Minimum="0" Maximum="100" 
                                    TickFrequency="5" 
                                    IsSnapToTickEnabled="True"
                                    Foreground="{StaticResource ApplePrimaryBrush}"
                                    materialDesign:SliderAssist.OnlyShowFocusVisualWhileDragging="True"/>
                            <TextBlock Text="{Binding CompletionPercentage, StringFormat={}{0:0}%}" 
                                       FontFamily="{StaticResource AppleFont}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource AppleTextPrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Участники команды -->
                    <Border Style="{StaticResource DashboardCardAnimated}" 
                            Background="{StaticResource AppleCardBackgroundBrush}" 
                            BorderBrush="{StaticResource AppleBorderBrush}" BorderThickness="1"
                            CornerRadius="16" Padding="24">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Участники команды" 
                                           FontFamily="{StaticResource AppleFont}" 
                                           FontWeight="SemiBold" FontSize="18" 
                                           Foreground="{StaticResource AppleTextPrimaryBrush}"
                                           Margin="0,0,0,16"/>

                                <Button Grid.Column="1" Content="Добавить участника" 
                                        Style="{StaticResource AppleSecondaryButton}"
                                        Command="{Binding AddMemberCommand}"/>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding TeamMembers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F7" CornerRadius="12" 
                                                Margin="0,0,0,8" Padding="16,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Grid.Column="0" Width="36" Height="36">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding AvatarUrl}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>

                                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontFamily="{StaticResource AppleFont}" 
                                                               FontSize="14" FontWeight="Medium"
                                                               Foreground="{StaticResource AppleTextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Role}" 
                                                               FontFamily="{StaticResource AppleFont}" 
                                                               FontSize="12"
                                                               Foreground="{StaticResource AppleTextSecondaryBrush}"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <Button Grid.Column="2" 
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.RemoveMemberCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}">
                                                    <materialDesign:PackIcon Kind="Close" 
                                                                             Width="16" Height="16"
                                                                             Foreground="{StaticResource AppleTextSecondaryBrush}"/>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Border Background="#F5F5F7" CornerRadius="12" 
                                    Margin="0,8,0,0" Padding="16,12"
                                    BorderThickness="2" BorderBrush="#DCDCE2"
                                    Visibility="{Binding HasNoTeamMembers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Пока нет ни одного участника" 
                                           FontFamily="{StaticResource AppleFont}" 
                                           FontSize="14" 
                                           Foreground="{StaticResource AppleTextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
