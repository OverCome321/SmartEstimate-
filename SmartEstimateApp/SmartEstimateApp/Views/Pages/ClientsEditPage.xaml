<Page x:Class="SmartEstimateApp.Views.Pages.ClientsEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartEstimateApp.Views.Pages"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="ClientsEditPage">

    <Border CornerRadius="20,0,0,0" Background="{StaticResource AppleBackgroundBrush}">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Section: Header -->
            <Grid Grid.Row="0" Margin="48,32,48,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Header -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Client.Id, StringFormat={}Редактирование клиента, TargetNullValue=Новый клиент}"
                           Style="{StaticResource CardTitleStyle}"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                    <TextBlock Text="Заполните информацию о клиенте"
                           Foreground="{StaticResource AppleTextSecondaryBrush}"
                           FontFamily="{StaticResource AppleFont}"
                           FontSize="16"
                           Margin="0,0,0,24"/>
                </StackPanel>
            </Grid>

            <!-- Main Content: Client Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,16">
                <Border Background="{StaticResource AppleCardBackgroundBrush}"
                        CornerRadius="16"
                        Margin="48,0,48,24">
                    <Grid Margin="32">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Client Name -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,24">
                            <TextBlock Text="Имя клиента *"
                                   FontFamily="{StaticResource AppleFont}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AppleTextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                            <Border Background="Transparent"
                                BorderBrush="{StaticResource AppleBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Height="56">
                                <TextBox Text="{Binding Client.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ClientSeacrhBox}"
                                     Height="40"
                                     materialDesign:HintAssist.Hint="Введите имя клиента"
                                     materialDesign:HintAssist.HintOpacity="0.5"
                                     Background="Transparent"/>
                            </Border>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,24">
                            <TextBlock Text="Email"
                                   FontFamily="{StaticResource AppleFont}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AppleTextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                            <Border Background="Transparent"
                                BorderBrush="{StaticResource AppleBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Height="56">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="Email"
                                                         Grid.Column="0"
                                                         Width="20" Height="20"
                                                         Margin="16,0,0,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AppleTextSecondaryBrush}"/>
                                    <TextBox Grid.Column="1" 
                                         Text="{Binding Client.Email, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ClientSeacrhBox}"
                                         Height="40"
                                         materialDesign:HintAssist.Hint="Введите email клиента"
                                         materialDesign:HintAssist.HintOpacity="0.5"
                                         Margin="8,0,16,0"
                                         Background="Transparent"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,24">
                            <TextBlock Text="Телефон"
                                   FontFamily="{StaticResource AppleFont}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AppleTextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                            <Border Background="Transparent"
                                BorderBrush="{StaticResource AppleBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Height="56">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="Phone"
                                                         Grid.Column="0"
                                                         Width="20" Height="20"
                                                         Margin="16,0,0,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AppleTextSecondaryBrush}"/>
                                    <TextBox Grid.Column="1" 
                                         Text="{Binding Client.Phone, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ClientSeacrhBox}"
                                         Height="40"
                                         materialDesign:HintAssist.Hint="Введите номер телефона"
                                         materialDesign:HintAssist.HintOpacity="0.5"
                                         Margin="8,0,16,0"
                                         Background="Transparent"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,24">
                            <TextBlock Text="Адрес"
                                   FontFamily="{StaticResource AppleFont}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AppleTextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                            <Border Background="Transparent"
                                BorderBrush="{StaticResource AppleBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Height="96">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="MapMarker"
                                                         Grid.Column="0"
                                                         Width="20" Height="20"
                                                         Margin="16,16,0,0"
                                                         Foreground="{StaticResource AppleTextSecondaryBrush}"/>
                                    <TextBox Grid.Column="1" 
                                         Text="{Binding Client.Address, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ClientSeacrhBox}"
                                         Height="80"
                                         materialDesign:HintAssist.Hint="Введите адрес клиента"
                                         materialDesign:HintAssist.HintOpacity="0.5"
                                         Margin="8,8,16,8"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalContentAlignment="Top"
                                         Background="Transparent"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Status -->
                        <StackPanel Grid.Row="4" Margin="0,0,0,24">
                            <TextBlock Text="Статус"
                                   FontFamily="{StaticResource AppleFont}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AppleTextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                            <Border Background="Transparent"
                                BorderBrush="{StaticResource AppleBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Height="56">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="AccountCircle"
                                                         Grid.Column="0"
                                                         Width="20" Height="20"
                                                         Margin="16,0,0,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AppleTextSecondaryBrush}"/>
                                    <ComboBox Grid.Column="1"
                                          SelectedItem="{Binding Client.Status}"
                                          ItemsSource="{Binding StatusOptions}"
                                          Height="40"
                                          Margin="8,0,16,0"
                                          FontFamily="{StaticResource AppleFont}"
                                          FontSize="14"
                                          BorderThickness="0"
                                          Background="Transparent"
                                          
                                          VerticalContentAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Creation Date (Read-only) -->
                        <StackPanel Grid.Row="5" Margin="0,0,0,24"
                                Visibility="{Binding Client.Id, Converter={StaticResource StringNullOrEmptyToInverseVisibilityConverter}}">
                            <TextBlock Text="Дата создания"
                                   FontFamily="{StaticResource AppleFont}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AppleTextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                            <Border Background="Transparent"
                                BorderBrush="{StaticResource AppleBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Height="56">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="Calendar"
                                                         Grid.Column="0"
                                                         Width="20" Height="20"
                                                         Margin="16,0,0,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AppleTextSecondaryBrush}"/>
                                    <TextBox Grid.Column="1" 
                                         Text="{Binding Client.CreatedAt, StringFormat=dd.MM.yyyy, Mode=OneWay}" 
                                         Style="{StaticResource ClientSeacrhBox}"
                                         Height="40"
                                         IsReadOnly="True"
                                         Margin="8,0,16,0"
                                         Background="Transparent"
                                         Foreground="{StaticResource AppleTextSecondaryBrush}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </ScrollViewer>

            <!-- Actions Footer -->
            <Border Grid.Row="2" 
                Background="{StaticResource AppleCardBackgroundBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="#E5E5E5"
                Padding="48,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Validation Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Information"
                                           Width="18" Height="18"
                                           Foreground="{StaticResource AppleTextSecondaryBrush}"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                        <TextBlock Text="* - обязательные поля"
                               FontFamily="{StaticResource AppleFont}"
                               FontSize="14"
                               Foreground="{StaticResource AppleTextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="Отмена" 
                            Style="{StaticResource AppleCardPrimaryButton}"
                            Command="{Binding CancelCommand}"
                            Width="120"
                            Height="44"
                            Margin="0,0,16,0"/>
                        <Button Content="Сохранить" 
                            Style="{StaticResource AppleButtonStyle}"
                            Command="{Binding SaveCommand}"
                            Width="160"
                            Height="44"
                            Margin="0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>